generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  position String
  password String
  status   String   @default("active") // active, blocked
  lastSeen DateTime @default(now())
}
